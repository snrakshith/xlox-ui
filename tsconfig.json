{
  "extends": "./tsconfig.lib.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "xloxui",
  "include": [
    "declaration.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "exclude": ["node_modules", "src"]
}
